<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rebite.ro.rebiteapp.OfferDetailsActivity">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/map"
        app:layout_constraintStart_toStartOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/restaurant_logo_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Dummy title"
                app:layout_constraintTop_toBottomOf="@id/iv_logo"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_restaurant_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Dummy description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name"/>

            <!--e stands for 'empty'-->
            <View
                android:id="@+id/ev_separator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_restaurant_description"/>

            <TextView
                android:id="@+id/tv_offer_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Jumari cu mamaliga"
                app:layout_constraintTop_toBottomOf="@id/ev_separator"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_number_of_portions_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/portions_count"
                android:layout_marginEnd="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_offer_description"/>

            <TextView
                android:id="@+id/tv_number_of_portions_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2"
                app:layout_constraintTop_toTopOf="@id/tv_number_of_portions_label"
                app:layout_constraintStart_toEndOf="@id/tv_number_of_portions_label"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_number_of_portions_label"
                tools:text="Str. Vasile Parvan 80, Barlad" />

            <TextView
                android:id="@+id/tv_pick_up_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Pick up by 11:30"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_address"/>

            <TextView
                android:id="@+id/tv_eta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Estimated arrival 11:12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_pick_up_time"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_take_offer"
        android:text="@string/take_offer"
        style="@style/OfferAction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_mark_complete"
        android:text="@string/mark_complete"
        style="@style/OfferAction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>