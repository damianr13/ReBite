<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rebite.ro.rebiteapp.OfferDetailsActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/restaurant_logo_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Dummy title"
            app:layout_constraintTop_toBottomOf="@id/iv_logo"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_restaurant_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Dummy description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name"/>

        <!--e stands for 'empty'-->
        <View
            android:id="@+id/ev_separator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_restaurant_description"/>

        <TextView
            android:id="@+id/tv_offer_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Jumari cu mamaliga"
            app:layout_constraintTop_toBottomOf="@id/ev_separator"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_number_of_portions_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/portions_count"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_offer_description"/>

        <TextView
            android:id="@+id/tv_number_of_portions_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2"
            app:layout_constraintTop_toTopOf="@id/tv_number_of_portions_label"
            app:layout_constraintStart_toEndOf="@id/tv_number_of_portions_label"/>

        <TextView
            android:id="@+id/tv_pick_up_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="11:30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_number_of_portions_label"/>


        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@id/tv_pick_up_time"
            app:layout_constraintStart_toStartOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>