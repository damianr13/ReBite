<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rebite.ro.rebiteapp.CurrentlyInProgressOffersActivity">

    <fragment
        android:id="@+id/fr_offers_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="rebite.ro.rebiteapp.fragments.RestaurantOfferFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_see_on_map"
        android:text="@string/see_on_map"
        style="@style/OfferAction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
