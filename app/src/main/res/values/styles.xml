<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OfferAction" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="OfferDescriptionOverImage" parent="android:TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">@font/time_burner</item>
    </style>

    <style name="OfferImportantDescriptionOverImage" parent="OfferDescriptionOverImage">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="FormField">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:fontFamily">@font/time_burner</item>
    </style>

    <style name="RestaurantCreatorFormField" parent="FormField"/>

    <style name="MainActionButton" parent="OfferAction"/>

    <style name="FormActionImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:tint">#FFFFFF</item>
    </style>

    <style name="FormActionCard" parent="FormField">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
    </style>

</resources>